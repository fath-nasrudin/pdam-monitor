generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(cuid())
  username String    @unique
  readings Reading[]
  invoices Invoice[]
}

model Reading {
  id           String @id @default(cuid())
  user         User   @relation(fields: [userId], references: [id])
  userId       String
  billingPeriod String
  readingValue  Float

  @@unique([userId, billingPeriod])
}

model Invoice {
  id             String   @id @default(cuid())
  userId         String
  user           User     @relation(fields: [userId], references: [id])
  billingPeriod  String

  totalUsage     Int
  totalAmount    Int
  totalPaid      Int

  paymentStatus  PaymentStatus @default(unpaid)
  documentStatus DocumentStatus

  // pricing flattened
  pricingFixed            Int
  pricingTariff           Int
  pricingDiscountAmount   Int?
  pricingDiscountPercent  Int?

  // reading flattened
  readingPrev             Int
  readingCurr             Int
  readingDiscountAmount   Int?
  readingDiscountPercent  Int?

  // paymentAllocations PaymentAllocation[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

enum DocumentStatus {
  sent
  draft
}

enum PaymentStatus {
  paid
  partial
  unpaid
  waiped
}
